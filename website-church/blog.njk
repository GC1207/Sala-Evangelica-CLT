---
title: Blog
layout: 'base.njk'
---
   
   <main>
        <div class="blog-header">
            <h1>Articulos</h1>
                <p>Articulos recientes</p>
          </div>
          <ul role="list" class="articles__list flow">
            {%- for post in collections.post | reverse -%}
              <li>
                <article class="snippet">
                  <h3 class="snippet__title"><a href="{{ post.url }}">{{ post.data.title }}</a> </h3>
                  <p class="snippet__meta">by <span>{{ post.data.author }}</span> on <span>{{ post.data.date | postDate }}</span></p>
                  <p class="snippet__body">{{ post.data.description }}</p>
                  <a href="{{ post.url }}" class="btn btn--blog">Continue Reading</a>
                </article>
              </li>
            {%- endfor -%}

          </ul>
        </main>